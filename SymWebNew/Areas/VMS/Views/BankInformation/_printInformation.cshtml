@using UIHelper.MVC
@{
    Layout = null;
}
<style>
    .trkmodal{
        padding-top:10%;
    }
    .trkmodal-content {
        width: 50%;
        padding-bottom:10px;
    }
</style>
<div class="trkmodal-content">
    <div class="trkmodal-header">
        <span class="close">&times;</span>
        <h2 class="text-center">Report(Bank Information)</h2>
    </div>
    <div class="trkmodal-body">
    @using (Html.BeginForm("ReportView", "BankInformation", FormMethod.Post, new { enctype = "multipart/form-data", @target="_blank"}))
    {
        <div class="form-group">
            <label>Bank Name</label>
            @Html.SimpleDropDown("ItemId", "/Config/DropDown/BankInformations", new { @class = " form-control selectDropdown trName" })
        </div>
        <div class="form-group">
            <label>Branch Name</label>
            @Html.TextBox("Branch", null, new { @class = " form-control trBranch", @readonly = "readonly" })
        </div>
        <button type="submit" class=" btn btn-info">Preview</button>
        <button type="button" class="btn btn-danger closeBtn pull-right">Close</button>
    }
    </div>
</div>
<script>
    $(document).ready(function () {
        ////for dropdown
        InitDropDowns();
        ////for select2 dropdown
        $(".selectDropdown").select2();
        $(".selectDropdown").trigger('change');
        $(".selectDropdown").removeClass('form-control');

        function ItemChange() {
            var value = $('.trName').val().toString();
            if (value == 0) {
                $('.trBranch').val("");
                return;
            }
            var url = "/Vms/BankInformation/GetItemInfo?ItemId=" + value;

            $.getJSON(url, function (data) {
                $('.trBranch').val(data);
            });
        }
        ////changing item
        $('.trName').change(function () {
            ItemChange();
        });

        function closeModal() {
            $("#myModal").html("");
            trkmodal.style.display = "none";
        }

        var span = document.getElementsByClassName("close")[0];
        var trkmodal = document.getElementById('myModal');
        //When the user clicks on <span> (x), close the trkmodal
        span.onclick = function () {
            closeModal();
        }

        $('.closeBtn').click(function () {
            closeModal();
        });
        
    });
</script>
