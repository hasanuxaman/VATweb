                                    ;
                                }
                                //"sName": "Id", "sWidth": "12%"
                            }
                            , { "sName": "CurrencyCode", "sWidth": "10%" }
                            , { "sName": "CurrencyName", "sWidth": "10%" }
                            , { "sName": "Country", "sWidth": "10%" }
                            , { "sName": "CurrencySymbol", "sWidth": "10%" }


            ]
        });
    });
