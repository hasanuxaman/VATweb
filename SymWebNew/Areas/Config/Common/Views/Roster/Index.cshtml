@using UIHelper.MVC
<div class="thinbox">
    <div class="th_thinbox">
        <p>Roster</p>
    </div>
    <div>
        @using (Html.BeginForm("GetRoster", "Roster", FormMethod.Post, new { @Id = "submit" }))
        {
            <div class="row">
                <div class="col-md-2">
                    <div class="editor-label">
                        <label>Year</label>
                    </div>
                    <div class="editor-field">
                         @Html.SimpleDropDown("year", "/Config/DropDown/Year", new { @class = "required form-control" })
                        @*<input type="number" class="form-control" id="year" name="year" />*@
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="editor-label">
                        <label>Select month</label>
                    </div>
                    <div class="editor-field">
                        <select class="form-control" id="month" name="month">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="editor-label">
                        <label></label>
                    </div>
                    <div class="editor-field" style="margin-top:20px;">
                        <button type="button" title="Go" onclick="pageSubmit('submit')"  class="btn btn-info"> Go</button>
                        @*<input type="button" onclick="pageSubmit('submit')" class="sym-btn-add fa-angle-double-right" value="Go" />*@
                    </div>
                </div>
            </div>}
    </div>
</div>
<script>
    $(function () {
        InitDatePickers();
        InitDropDowns();
    })
</script>
