        <input type="button" class="btn btn-info" data-url="/Common/LeaveStructure" onclick="GoTo(this);" value="Cancel" />
    *@</div>
    
    
<div class="headrow">
    <button type="button" title="Save Data" onclick="pageSubmit('frmLevStr')" class="sym-btn-save" >&nbsp;Save</button>
</div>

}
<script>
    $(function () {
        valiDation("frmLevStr");
        if ('@ViewBag.Success' !="") {
            ShowResult('Success', '@ViewBag.Success');
        }
        if ('@ViewBag.Fail' !="") {
            ShowResult('Fail','@ViewBag.Fail');
        }
    });
</script>
